    <script>
        // Text-to-Speech functionality
        let speechSynthesis = window.speechSynthesis;
        let currentUtterance = null;
        let isPlaying = false;
        let currentSpeed = 1;
        let isPaused = false; // Tr·∫°ng th√°i pause
        
        const playBtn = document.getElementById('playBtn');
        const pauseBtn = document.getElementById('pauseBtn');
        const stopBtn = document.getElementById('stopBtn');
        const speedDisplay = document.getElementById('speedDisplay');
        const speedUp = document.getElementById('speedUp');
        const speedDown = document.getElementById('speedDown');
        const chapterContent = document.getElementById('chapterContent');
        
        // Get text content
        function getTextContent() {
            return chapterContent.textContent || chapterContent.innerText || '';
        }
        
        // Play function
        function playText() {
            console.log('üéµ PLAY BUTTON CLICKED');
            console.log('speechSynthesis.speaking:', speechSynthesis.speaking);
            console.log('speechSynthesis.paused:', speechSynthesis.paused);
            console.log('isPlaying:', isPlaying);
            console.log('isPaused:', isPaused);
            
            const text = getTextContent();
            if (!text.trim()) {
                alert('Kh√¥ng c√≥ n·ªôi dung ƒë·ªÉ ƒë·ªçc!');
                return;
            }
            
            // N·∫øu ƒëang speaking v√† kh√¥ng pause th√¨ kh√¥ng l√†m g√¨
            if (speechSynthesis.speaking && !speechSynthesis.paused && !isPaused) {
                console.log('‚ùå Already speaking, doing nothing');
                return;
            }
            
            // N·∫øu ƒëang pause th√¨ resume
            if (isPaused) {
                console.log('‚ñ∂Ô∏è Resuming paused speech');
                speechSynthesis.resume();
                isPlaying = true;
                isPaused = false;
                playBtn.style.display = 'none';
                pauseBtn.style.display = 'inline-block';
                stopBtn.style.display = 'inline-block';
                return;
            }
            
            console.log('üÜï Creating new utterance');
            // D·ª´ng m·ªçi utterance hi·ªán t·∫°i
            speechSynthesis.cancel();
            
            currentUtterance = new SpeechSynthesisUtterance(text);
            currentUtterance.lang = 'vi-VN';
            currentUtterance.rate = currentSpeed;
            currentUtterance.pitch = 1;
            currentUtterance.volume = 1;
            
            currentUtterance.onstart = function() {
                console.log('üé§ Speech started');
                isPlaying = true;
                isPaused = false;
                playBtn.style.display = 'none';
                pauseBtn.style.display = 'inline-block';
                stopBtn.style.display = 'inline-block';
            };
            
            currentUtterance.onend = function() {
                console.log('üèÅ Speech ended');
                isPlaying = false;
                isPaused = false;
                playBtn.style.display = 'inline-block';
                pauseBtn.style.display = 'none';
                stopBtn.style.display = 'none';
            };
            
            currentUtterance.onerror = function(event) {
                console.error('‚ùå Speech synthesis error:', event.error);
                isPlaying = false;
                isPaused = false;
                playBtn.style.display = 'inline-block';
                pauseBtn.style.display = 'none';
                stopBtn.style.display = 'none';
            };
            
            speechSynthesis.speak(currentUtterance);
        }
        
        // Pause function
        function pauseText() {
            console.log('‚è∏Ô∏è PAUSE BUTTON CLICKED');
            console.log('speechSynthesis.speaking:', speechSynthesis.speaking);
            console.log('speechSynthesis.paused:', speechSynthesis.paused);
            console.log('isPlaying:', isPlaying);
            console.log('isPaused:', isPaused);
            
            if (speechSynthesis.speaking && !speechSynthesis.paused) {
                console.log('‚è∏Ô∏è Pausing speech');
                speechSynthesis.pause();
                isPlaying = false;
                isPaused = true;
                playBtn.style.display = 'inline-block';
                pauseBtn.style.display = 'none';
            } else {
                console.log('‚ùå Cannot pause - not speaking or already paused');
            }
        }
        
        // Stop function
        function stopText() {
            console.log('‚èπÔ∏è STOP BUTTON CLICKED');
            console.log('speechSynthesis.speaking:', speechSynthesis.speaking);
            console.log('speechSynthesis.paused:', speechSynthesis.paused);
            console.log('isPlaying:', isPlaying);
            console.log('isPaused:', isPaused);
            
            speechSynthesis.cancel();
            isPlaying = false;
            isPaused = false;
            playBtn.style.display = 'inline-block';
            pauseBtn.style.display = 'none';
            stopBtn.style.display = 'none';
            
            console.log('‚èπÔ∏è Speech stopped and reset');
        }
        
        // Speed control
        function updateSpeed() {
            if (currentUtterance) {
                currentUtterance.rate = currentSpeed;
            }
            speedDisplay.textContent = currentSpeed + 'x';
        }
        
        // Event listeners
        playBtn.addEventListener('click', playText);
        pauseBtn.addEventListener('click', pauseText);
        stopBtn.addEventListener('click', stopText);
        
        speedUp.addEventListener('click', function() {
            if (currentSpeed < 2) {
                currentSpeed += 0.25;
                updateSpeed();
            }
        });
        
        speedDown.addEventListener('click', function() {
            if (currentSpeed > 0.25) {
                currentSpeed -= 0.25;
                updateSpeed();
            }
        });
        
        // Keyboard shortcuts
        document.addEventListener('keydown', function(e) {
            if (e.ctrlKey || e.metaKey) {
                switch(e.key) {
                    case ' ':
                        e.preventDefault();
                        if (isPlaying) {
                            pauseText();
                        } else {
                            playText();
                        }
                        break;
                    case 's':
                        e.preventDefault();
                        stopText();
                        break;
                }
            }
        });
        
        // Clean up on page unload
        window.addEventListener('beforeunload', function() {
            if (isPlaying) {
                speechSynthesis.cancel();
            }
        });

        // Load chapters list into modal
        document.getElementById('openChapterListBtn')?.addEventListener('click', async function() {
            try {
                const res = await fetch('/api/story/{{story.id}}/chapters');
                const data = await res.json();
                const container = document.getElementById('chapters-container');
                container.innerHTML = '';
                const left = document.createElement('div');
                left.className = 'col-12 col-md-6';
                const right = document.createElement('div');
                right.className = 'col-12 col-md-6';
                const ulLeft = document.createElement('ul');
                const ulRight = document.createElement('ul');
                data.forEach((chap, idx) => {
                    const li = document.createElement('li');
                    const a = document.createElement('a');
                    a.href = '/story/{{story.id}}/chapter/' + chap.id;
                    a.textContent = chap.title;
                    a.className = 'text-decoration-none';
                    li.appendChild(a);
                    if (idx % 2 === 0) ulLeft.appendChild(li); else ulRight.appendChild(li);
                });
                left.appendChild(ulLeft);
                right.appendChild(ulRight);
                container.appendChild(left);
                container.appendChild(right);
            } catch (e) {
                console.error(e);
            }
        });
    </script>

    <script>
        // Auto-add token to chapter links for reading history
        document.addEventListener('DOMContentLoaded', function() {
            const token = localStorage.getItem('accessToken');
            if (token) {
                // Add token to all chapter links
                const chapterLinks = document.querySelectorAll('a[href*="/story/"][href*="/chapter/"]');
                chapterLinks.forEach(link => {
                    const url = new URL(link.href, window.location.origin);
                    url.searchParams.set('token', token);
                    link.href = url.toString();
                });
                
                // Add token to navigation buttons
                const prevBtn = document.querySelector('.chapter-prev');
                const nextBtn = document.querySelector('.chapter-next');
                
                if (prevBtn && prevBtn.href) {
                    const prevUrl = new URL(prevBtn.href, window.location.origin);
                    prevUrl.searchParams.set('token', token);
                    prevBtn.href = prevUrl.toString();
                }
                
                if (nextBtn && nextBtn.href) {
                    const nextUrl = new URL(nextBtn.href, window.location.origin);
                    nextUrl.searchParams.set('token', token);
                    nextBtn.href = nextUrl.toString();
                }
                
                console.log('[CHAPTER] Token added to links for reading history');
            }
        });
