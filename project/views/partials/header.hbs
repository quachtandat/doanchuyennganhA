    width: 35px;
    height: 35px;
    border-radius: 50%;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-weight: bold;
    font-size: 14px;
}

.dropdown-menu {
    min-width: 250px;
}

.dropdown-item-text {
    padding: 0.5rem 1rem;
}
